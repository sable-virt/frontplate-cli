{
  "compilerOptions": {
    "outDir": "src/aot-compiled",
    "sourceRoot": "src",
    "baseUrl": "src",
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "lib": [
      "es2015",
      "dom"
    ],
    "declaration": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "noEmit": false,
    "removeComments": false,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "compileOnSave": true,
  "exclude": [
    "src/test.ts",
    "src/**/*spec.ts",
    "src/aot-compiled"
  ],
  "typeRoots": [
    "node_modules/@types"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useWebpackText": true
  },
  "angularCompilerOptions": {
    "genDir": "src/aot-compiled",
    "skipMetadataEmit" : true,
    "debug": true
  }
}